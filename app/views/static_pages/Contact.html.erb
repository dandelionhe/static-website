<div class="container">
    <div>
        <ol class="breadcrumb">
            <li><%= link_to "Home",root_path %></li>
            <li class='active'>Contact</li>
        </ol>
    </div>
    <div class="">
        <h3>Contact Us</h3>
    </div>

    <div class="row-content">
        <h3>Location Information</h3>
        <div class="col-sm-8">
            <h5>Our Address</h5>
            <address>
                121, Clear Water Bay Road<br>
                Clear Water Bay, Kowloon<br>
                HONG KONG<br>
                <i class="fa fa-phone"></i>: +852 1234 5678<br>
                <i class="fa fa-fax"></i>: +852 8765 4321<br>
                <i class="fa fa-envelope"></i>:
                <a href="mailto:confusion@food.net">confusion@food.net</a>
            </address>
            <div class="btn-group" role="group">
                <a href="#" type="button" class="btn btn-primary">
                    <i class="fa fa-phone"></i>Call</a>
                <a href="#" type="button" class="btn btn-info">
                    <i class="fa fa-skype"></i>Skype</a>
                <a href="#" type="button" class="btn btn-success">
                    <i class="fa fa-envelope-o"></i>Email</a>
            </div>
        </div>
        <div class="col-sm-4">
            <p>Map of our Location</p>
        </div>
    </div>

    <div class="row-content">
        <h3>Send us Feedback</h3>
        <form class="form-horizontal">
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="firstname" placeholder="First Name">
                </div>
            </div>

            <div class="form-group">
                <label for="telnum" class="col-sm-2 control-label">Contact Tel.</label>
                <div class="col-sm-4 col-md-3">
                    <div class="input-group">
                        <div class="input-group-addon">(</div>
                        <input type="tel" name="areacode" class="form-control" placeholder="areacode">
                        <div class="input-group-addon">)</div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-7">
                    <input type="tel" name="telnum" class="form-control" placeholder="Tel.number">
                </div>
            </div>

            <div class="form-group">
                <label for="emailid" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-6 col-md-7">
                    <input type="email" name="emailid" class="form-control" placeholder="Email">
                </div>
            </div>

            <div class="form-group">
              <div class="checkbox col-sm-5 col-sm-offset-2">
                <label class="checkbox-inline">
                  <input type="checkbox" name="approve" ><strong>Allow to contact?</strong>
                </label>
              </div>
              <div class="col-sm-3 col-sm-offset-1">
                <select class="form-control" name="">
                  <option >Tel.</option>
                  <option >Email</option>
                </select>
              </div>
            </div>

            <div class="form-group">
                <label for="feedback" class="col-sm-2 control-label">Feedback</label>
                <div class="col-sm-10">
                    <textarea name="feedback" rows="8" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" name="button" class="btn btn-primary">FeedBack</button>
                </div>
            </div>

        </form>
    </div>

</div>
